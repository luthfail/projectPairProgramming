<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
  <%- include('../partial/navbar') %> 
    <h1>List Product</h1>
    <div>
      <h6>sort by</h6>
      <a href="/seller/product/?sort=stock" class="btn btn-success" type="button">stock</a>
      <a href="/seller/product/?sort=price" class="btn btn-success" type="button">price</a>
    </div>
    <a class="btn btn-secondary" href="/seller/product/add" role="button">Add Product</a>
    <table class="table table-primary table-striped">
        <thead>
          <tr>
            <th scope="col">Product Name</th>
            <th scope="col">Stock</th>
            <th scope="col">Price</th>
            <th scope="col">Category Name</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
        <% data.forEach(el => { %>
            <tr>
                <td><%= el.name %></td>
                <td><%= el.stock %></td>
                <td><%= el.currency() %></td>
                <td><%= el.Category.name %></td>
                <td>
                    <a class="btn btn-secondary" href="/seller/product/<%= el.id %>" role="button">Detail</a>
                    <a class="btn btn-danger" href="/seller/product/<%= el.id %>/delete" role="button">Delete</a>
                </td>
            </tr>
        <% }) %> 
        </tbody>
      </table>
</body>
</html>